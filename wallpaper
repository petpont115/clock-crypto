            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .clock {
            position: relative;
            width: 250px;
            height: 250px;
            background: linear-gradient(to bottom, #333, #111);
            border: 10px solid #555;
            border-radius: 50%;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.7);
            margin-bottom: 20px;
        }

        .center-dot {
            width: 12px;
            height: 12px;
            background-color: red;
            border-radius: 50%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            box-shadow: 0 0 10px red;
        }

        .hand {
            position: absolute;
            bottom: 50%;
            left: 50%;
            transform-origin: bottom;
            transform: rotate(0deg);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            font-size: 12px;
            white-space: nowrap;
            font-weight: bold;
        }

        #second-hand {
            color: #ff5e5e;
        }

        #minute-hand {
            color: #5ea3ff;
        }

        #hour-hand {
            color: #5eff74;
        }

